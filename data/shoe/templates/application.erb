require 'optparse'

module <%= module_name %>
  class Application
    def initialize
      @options = OptionParser.new do |opts|
        # -h, --help, -v, --version are built into OptionParser
        # Try `<%= name %> --version=all` as you require more libraries!
        opts.version = <%= module_name %>::VERSION
      end
    end

    def run(argv)
      begin
        @options.parse(argv)
      rescue OptionParser::ParseError
        @options.abort($!)
      end

      # Have at it!
    end
  end
end
