#!/usr/bin/env ruby

begin
  require '<%= name %>'
rescue LoadError
  raise unless $!.message =~ /\b<%= name %>$/

  lib = File.expand_path('../../lib', __FILE__)
  if !$:.include?(lib)
    warn "#{$!}. Trying again with #{lib} on the $LOAD_PATH."
    $:.unshift(lib)
    retry
  end

  raise
end

<%= module_name %>::Application.new.run(ARGV)
