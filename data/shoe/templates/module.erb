<% if data? %>
require 'pathname'
require 'rbconfig'
require 'rbconfig/datadir'

<% end %>
module <%= module_name %>
  VERSION = '<%= version %>'
<% if application? || extension? %>

<% end %>
<% if application? %>
  autoload :Application, '<%= name %>/application'
<% end %>
<% if extension? %>
  autoload :<%= extension_module_name %>, '<%= name %>/<%= extension_name %>'
<% end %>
<% if data? %>

  def self.datadir
    @@datadir ||= Pathname.new(RbConfig.datadir('<%= name %>'))
  end
<% end %>
end
